<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="15dip"
	android:descendantFocusability="blocksDescendants" >

 	<LinearLayout 
 	    android:id="@+id/ItemDeadline"
 		android:layout_width="40sp"
 		android:layout_height="wrap_content"
 		android:orientation="vertical">
 
     	<TextView
      		android:id="@+id/ItemWeek"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:gravity="center_vertical"
        	android:textColor="#666666"
        	android:textStyle="bold"
       	 	android:textSize="15sp" />
 
     	<TextView
      		android:id="@+id/ItemMD"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:gravity="center_vertical"
        	android:textColor="#888888"
        	android:textSize="12sp" />
     
 	</LinearLayout>
	
 	<TextView
      	android:id="@+id/ItemName"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/ItemDeadline"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp" />
 	
 	<LinearLayout 
 		android:layout_width="wrap_content"
 		android:layout_height="wrap_content"
 		android:layout_alignParentRight="true"
 		android:gravity="center_vertical"
 		android:orientation="horizontal">
     	
 		<Button 
 	    	android:id="@+id/btnRed"
  			android:layout_width="20dp"
  			android:layout_height="20dp"
  			android:layout_margin="3dp"
  			android:background="@drawable/red_round_button" />
 		<Button
 	    	android:id="@+id/btnOrange"
  			android:layout_width="20dp"
  			android:layout_height="20dp"
  			android:layout_margin="3dp" 
  			android:background="@drawable/orange_round_button" />
 		<Button 
 	    	android:id="@+id/btnGreen"
  			android:layout_width="20dp"
  			android:layout_height="20dp"
  			android:layout_margin="3dp"
  			android:background="@drawable/green_round_button" />
 		
 		<ImageView
        	android:id="@+id/ivImg"
        	android:layout_width="25dp"
        	android:layout_height="30dp"
        	android:layout_margin="5dp" />
 	
 	</LinearLayout>

</RelativeLayout>